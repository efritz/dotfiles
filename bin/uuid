#!/bin/bash

counter=${1:-1}

if [ "$counter" -eq 1 ]; then
    echo -n $(uuidgen | tr '[:upper:]' '[:lower:]') | pbcopy
else
    text=''
    while [ "$counter" -gt 0 ]; do
        text="$text$(uuidgen | tr '[:upper:]' '[:lower:]')\n"
        counter=$((counter - 1))
    done

    printf "$text" | pbcopy
fi
