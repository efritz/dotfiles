)

counter=${1:-1}
paragraphs=$(echo "$lorem" | wc -l)

if [ "$counter" -eq 1 ]; then
    echo -n $(echo "$lorem" | head -n 1) | pbcopy
else
    text=''
    while [ "$counter" -gt 0 ]; do
        text="$text$(echo "$lorem" | head -n "$counter")"
        counter=$((counter - paragraphs))
    done

    echo "$(echo "$text" | tr '\n' '~' | sed -e 's/~/~~/g' | tr '~' '\n')" | pbcopy
fi
