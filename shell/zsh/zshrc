includes=(
    ~/.zsh/homebrew # must come before $(brew --prefix) calls
    ~/.zsh/aliases
    ~/.zsh/asdf
    ~/.zsh/autocorrect
    ~/.zsh/nvm
    ~/.zsh/exports
    ~/.zsh/gcloud
    ~/.zsh/history
    ~/.zsh/hooks
    ~/.zsh/oh-my-zsh
    ~/.zsh/completions
    ~/.zsh/paths
    ~/.zsh/plugins
    ~/.fzf.zsh
    ~/.zsh/zshrc-`hostname -s`
)

for config in $includes; do
    if [[ -f $config ]]; then
        source $config
    fi
done
