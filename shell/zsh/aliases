# enable aliases to be sudoâ€™ed
alias sudo='sudo '

# safe defaults
alias rm='rm -i'
alias mv='mv -i'
alias cp='cp -i'

# make parent dirs
alias mkdir='mkdir -p'

# better colors
alias ls='gls -hF --group-directories-first --color=auto'

# navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ~='cd ~'
alias -- -='cd -'

# shorthands
alias g='git'

# map function (e.g. `find . -name .gitattributes | map dirname`)
alias map='xargs -n1'
